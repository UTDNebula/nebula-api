{
  "name": "nebula-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon ./api/server.ts",
    "build": "tsc --project ./",
    "lint": "eslint --fix --ext .ts .",
    "format": "prettier --write 'api/**/*.{tsx,ts,js}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "prettier-eslint": "^13.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{tsx,ts,js}": [
      "eslint --fix --ext .ts .",
      "prettier --write 'api/**/*.{tsx,ts,js}'"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableSubjectLowerCase": true,
      "maxHeaderWidth": 72,
      "maxLineWidth": 80,
      "defaultType": "chore"
    }
  }
}
